@model RentPlannet.Models.LoginVM
@{
    Layout = "~/Views/shared/_Layout.cshtml";
}
<title>Sign In |  Admin & Dashboard Template</title>
<div class="" style="margin-top:-35px">
    <div class="auth-page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-sm-5 text-white-50">
                        <div>
                            <a href="index.html" class="d-inline-block auth-logo load">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">
                        <div class="card-body p-4">
                            <div class="text-center">
                                <h5 class="text-secondary" style="font-family: Georgia, serif;">User Sign</h5>
                                <p class="text-muted">Sign in to continue to Our Planet.</p>
                            </div>
                            <div class="p-2">
                                @using (Html.BeginForm("SignInAuth", "Account",FormMethod.Post))
                                {
                                    <form>
                                        <div class="mb-3">
                                            <label for="userName" class="form-label">UserName</label><span class="text-danger">*</span>
                                            <input type="text" class="form-control" id="userName" name="UserName" placeholder="Enter username">
                                        </div>
                                        <div class="mb-3">
                                            <div class="float-end">
                                                <a href="/account/forgetpassword" class="text-muted load">Forgot password?</a>
                                            </div>
                                                <label class="form-label" for="Password">Password</label><span class="text-danger">*</span>
                                                <div class="position-relative auth-pass-inputgroup mb-3">
                                                    <input type="password" class="form-control pe-5 password-input" placeholder="Enter password" id="Password" name="Password" aria-describedby="passwordInput" @*pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"*@ required>
                                                    <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon load"  type="submit" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                                    <div class="invalid-feedback">
                                                        Please enter password
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label" for="Remember">Remember me</label>
                                            <input class="form-check-input" type="checkbox" value="" id="Remember" name="Remember">
                                            <span style="margin-left:40px;color:red">@TempData["ERROR"]</span>
                                        </div>

                                        <div class="mt-4 text-end">
                                            <button class="btn btn-secondary w-45  loader" type="submit">Sign In</button>
                                            <a href="/home/index" class="btn btn-success w-40  loader" >Go Back Home</a>
                                        </div>


                                        <div class="mt-4 text-center">
                                            <div class="signin-other-title">
                                                <h5 class="fs-13 mb-4">Sign In with</h5>
                                            </div>
                                            <div>
                                                <button type="button" class="btn btn-primary btn-icon waves-effect waves-light load"><i class="ri-facebook-fill fs-16"></i></button>
                                                <button type="button" class="btn btn-danger btn-icon waves-effect waves-light load"><i class="ri-google-fill fs-16"></i></button>
                                                <button type="button" class="btn btn-dark btn-icon waves-effect waves-light load"><i class="ri-github-fill fs-16"></i></button>
                                                <button type="button" class="btn btn-info btn-icon waves-effect waves-light  load"><i class="ri-twitter-fill fs-16"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <p class="mb-0">Don't have an account ? <a href="/account/signup" class="fw-semibold load text-primary load text-decoration-underline"> Signup </a> </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

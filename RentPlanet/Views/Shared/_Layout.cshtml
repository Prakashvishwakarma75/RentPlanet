<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <link href="~/Assests/assets/css/icons.min.css" rel="stylesheet" />
    <link style="background-color:white; border-radius:50%; font-size:50px" rel="shortcut icon" type="image/png" href="~/Assests/assets/images/favicon.ico">
    <script src="~/Assests/assets/js/layout.js"></script>
    <link href="~/Assests/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assests/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/Assests/assets/css/custom.min.css" rel="stylesheet" />
</head>
<body>
    <style>
        #loader {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.5);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
        }
    </style>
    <div>
        @RenderBody()
        <div id="loader" style="display:none">
            <div class="spinner-border text-primary" style="font-size:50px" role="status" title="Loading.."></div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Assests/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assests/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Assests/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/Assests/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/Assests/assets/js/plugins.js"></script>
    <script src="~/Assests/assets/libs/particles.js/particles.js"></script>
    <script src="~/Assests/assets/js/pages/particles.app.js"></script>
    <script src="~/Assests/assets/js/pages/password-addon.init.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    // Show the loader
    $('.load').click(function () {
        $("#loader").show();
        setTimeout(function () {
            $("#loader").hide();
        }, 8000);
    });

</script>
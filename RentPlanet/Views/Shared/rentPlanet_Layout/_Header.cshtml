<header id="page-topbar">
    <div id="layout-wrapper">
        <div class="navbar-header">
            <div class="d-flex">
                <div class="navbar-brand-box horizontal-logo">
                    <a href="index.html" class="logo logo-dark load">
                        <span class="logo-sm">
                            <img src="" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="" alt="" height="17">
                        </span>
                    </a>
                    <a href="index.htmlload" class="logo logo-light load">
                        <span class="logo-sm">
                            <img src="" alt="" height="22">
                        </span>
                        <span class="logo-lg">
                            <img src="" alt="" height="17">
                        </span>
                    </a>
                </div>
                <a href="/account/dashbord"><img src="~/Assests/assets/images/602220.png" height="60" class="load" style="margin-left:20px" /></a>
            </div>
            <div class="d-flex align-items-center">
                <div class="dropdown d-md-none topbar-head-dropdown header-item">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle" id="page-header-search-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="bx bx-search fs-22"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-0" aria-labelledby="page-header-search-dropdown">
                        <form class="p-3">
                            <div class="form-group m-0">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search ..." aria-label="Recipient's username">
                                    <button class="btn btn-primary" type="submit"><i class="mdi mdi-magnify"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="dropdown ms-1 topbar-head-dropdown header-item">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle load" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img id="header-lang-img" src="~/Assests/assets/images/Flag_of_India.png" alt="Header Language" width="30" class="rounded">
                    </button>
                </div>
                <div class="dropdown topbar-head-dropdown ms-1 header-item" id="notificationDropdown">
                    <button type="button" class="btn btn-icon btn-topbar btn-ghost-secondary rounded-circle load" id="page-header-notifications-dropdown" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-haspopup="true" aria-expanded="false">
                        <i class='bx bx-bell fs-22'></i>
                        <span class="position-absolute topbar-badge fs-10 translate-middle badge rounded-pill bg-danger">3<span class="visually-hidden">unread messages</span></span>
                    </button>
                </div>
                <div class="dropdown ms-sm-3 header-item topbar-user">
                    <button type="button" class="btn" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="d-flex align-items-center">
                            @if (string.IsNullOrEmpty(ViewBag.ProfileImage))
                            {
                                <img class="rounded-circle header-profile-user" src="~/Assests/assets/images/users/user-dummy-img.jpg" alt="Header Avatar">
                            }
                            else
                            {
                                <img class="rounded-circle header-profile-user" src="~/Assests/assets/images/users/@ViewBag.ProfileImage" alt="Header Avatar" />
                            }
                            <span class="d-none d-xl-inline-block ms-1 fw-medium user-name-text">
                                @(string.IsNullOrEmpty(ViewBag.UserName) ? "Unknown" : ViewBag.UserName)
                            </span>
                        </span>
                        <span class="d-none d-xl-block ms-1 fs-12 user-name-sub-text">Tab To Pofile</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        <h6 class="dropdown-header">Welcome Anna!</h6>
                        <a class="dropdown-item load" href="/account/profiles"><i class="mdi mdi-account-circle text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Profile</span></a>
                        <a class="dropdown-item load" href="/manageroom/room"><i class="mdi mdi-note-text-outline text-muted fs-16 align-middle me-1"></i> <span class="align-middle">My Room</span></a>
                        <a class="dropdown-item load" href="/manageroom/managerooms"><i class="fa fa-search text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Search Room</span></a>
                        <a class="dropdown-item load" href="auth-lockscreen-basic.html"><i class="mdi mdi-lock text-muted fs-16 align-middle me-1"></i> <span class="align-middle">Lock screen</span></a>
                        <a class="dropdown-item load" href="/account/signout"><i class="mdi mdi-logout text-muted fs-16 align-middle me-1"></i> <span class="align-middle" data-key="t-logout">Logout</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

